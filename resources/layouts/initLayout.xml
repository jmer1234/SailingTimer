<layout id="InitLayout">
	<label
		id="TimeLabel"
		x="center"
		y="0"
		justification="Gfx.TEXT_JUSTIFY_CENTER"
		font="Gfx.FONT_SMALL"
		color="Gfx.COLOR_WHITE"
	/>
	<label
		id="TimerLabel"
		x="center"
		y="25"
		justification="Gfx.TEXT_JUSTIFY_CENTER"
		font="Gfx.FONT_NUMBER_HOT"
		color="Gfx.COLOR_WHITE"
		text="@Strings.TimerLabel"
	/>
	<label
		id="StartLabel"
		x="center"
		y="center"
		justification="Gfx.TEXT_JUSTIFY_CENTER"
		font="Gfx.FONT_MEDIUM"
		color="Gfx.COLOR_GREEN"
		text="@Strings.StartLabel"
	/>
	<label
		id="OffsetTimerLabel"
		x="center"
		y="105"
		justification="Gfx.TEXT_JUSTIFY_CENTER"
		font="Gfx.FONT_NUMBER_HOT"
		color="Gfx.COLOR_WHITE"
		text="@Strings.OffsetTimerLabel"
	/>
	<label
		id="ModeLabel"
		x="center"
		y="180"
		justification="Gfx.TEXT_JUSTIFY_CENTER"
		font="Gfx.FONT_SMALL"
		color="Gfx.COLOR_BLUE"
		text="@Strings.ModeLabel_standard"
	/>
</layout>